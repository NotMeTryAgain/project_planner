<h2><%= @project.name %></h2>

<p><%= @project.description %></p>

<h4>Collaborators</h4>
<ul>
  <% @users.each do |user| %>
    <li><%= user.name %>: <%= user.email %></li>
  <% end %>
</ul>

<h4>Tasks</h4>

<% if @project.tasks.empty? %>
  <ul>
    <li> None </li>
  </ul>
<% else %>
  <ul>
    <% @project.tasks.each do |task| %>
      <% if task.user_id.nil? %>
        <li><%= task.name  %></li>
      <% else %>
        <li><%= task.name  %>: <%= task.user.name %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
